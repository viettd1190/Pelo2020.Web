@model Pelo.Web.Models.Customer.CustomerInfoModel

@{
    ViewData["Title"] = "Thông tin khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <style>
        .label-title {
            /*font-weight:600;*/
            font-size: 15px;
        }

        .label-content {
            font-size: 15px;
            color: #666EE8;
            padding-left: 5px;
        }
    </style>
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thêm khách hàng</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index")">
                    Danh sách CRM
                </a>
            </li>
            <li class="breadcrumb-item active">Thông tin khách hàng</li>
        </ol>
        <div class=" row col-md-12 form-group">
            <h3>THÔNG TIN KHÁCH HÀNG</h3>
        </div>
        <form>
            @Html.ValidationSummary()
            @Html.HiddenFor(c => c.Id,new { @id= "txtCustomerId" })
            <div class="row form-group">
                <div class="col-5">
                    <label class="col-sm-3 label-title col-form-label"><strong>Mã khách hàng: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.Code</label>
                </div>
                <div class="col-4">
                    <label class="col-sm-3 label-title col-form-label"><strong>Nhóm khách hàng: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.CustomerGroup</label>
                </div>
                <div class="col-3">
                    <label class="col-sm-3 label-title col-form-label"><strong>Mức độ thân thiết: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.CustomerVip</label>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-3">
                    <label class="col-sm-3 label-title col-form-label"><strong> Người tạo: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.UserCreated</label>
                </div>
                <div class="col-3">
                    <label class="col-sm-3 label-title col-form-label"><strong> Ngày tạo: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.DateCreated</label>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-5">
                    <label class="col-sm-3 label-title col-form-label"><strong> Tên khách hàng: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.Name</label>
                </div>
                <div class="col-4">
                    <label class="col-sm-3 label-title col-form-label"><strong> Số điện thoại 1: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.Phone</label>
                </div>
                <div class="col-3">
                    <label class="col-sm-3 label-title col-form-label"><strong> Số điện thoại 2: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.Phone2</label>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-5">
                    <label class="col-sm-3 label-title col-form-label"><strong> Địa chỉ: </strong></label>
                    <label class="col-sm-9 label-content col-form-label">@Model.Address</label>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.Ward) || !string.IsNullOrEmpty(Model.Ward) || !string.IsNullOrEmpty(Model.Ward))
            {
                <div class="row form-group">
                    <div class="col-3">
                        <label class="col-sm-3 label-title col-form-label"><strong> Tỉnh: </strong></label>
                        <label class="col-sm-9 label-content col-form-label">@Model.Province</label>
                    </div>
                    <div class="col-3">
                        <label class="col-sm-3 label-title col-form-label"><strong> Quận/huyện: </strong></label>
                        <label class="col-sm-9 label-content col-form-label">@Model.District</label>
                    </div>
                    <div class="col-3">
                        <label class="col-sm-3 label-title col-form-label"><strong> Phường/xã: </strong></label>
                        <label class="col-sm-9 label-content col-form-label">@Model.Ward</label>
                    </div>
                </div>
            }
            <div class="row form-group">
                <button type="submit" class="btn btn-primary">Tiếp tục</button>
                <a class="btn btn-secondary" href="@Url.Action("Index")">Quay lại</a>
            </div>
        </form>
        <h2 style="text-align:center;font-size:20px;" class="label-content">Lịch sử giao dịch của khách hàng</h2>
        <a class="btn btn-primary collapsed title-history" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            Đơn hàng (0)
        </a>
        <div class="mt-2 collapse" id="collapseExample" style="">
            <div class="table-responsive">
                <table id="tblCrms" class="table table-bordered">
                    <thead class="thead-default">
                        <tr>
                            <th></th>
                            <th>Trạng thái</th>
                            <th>Mã cơ hội</th>
                            <th>Khách hàng</th>
                            <th>Nhu cầu</th>
                            <th>Thông tin thêm</th>
                            <th>Phụ trách</th>
                            <th>Ngày liên hệ</th>
                            <th>Ngày tạo</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <br />
        <a class="btn btn-primary collapsed title-history" data-toggle="collapse" href="#collapseCrm" role="button" aria-expanded="false" aria-controls="collapseCrm">
            CRM <span id="crmCount">(0)</span>
        </a>
        <div class="mt-2 collapse" id="collapseCrm" style="">
            <div class="table-responsive">
                <table id="tblCrms" class="table table-bordered">
                    <thead class="thead-default">
                        <tr>
                            <th></th>
                            <th>Trạng thái</th>
                            <th>Mức độ khẩn cấp</th>
                            <th>Mã cơ hội</th>
                            <th>Khách hàng</th>
                            <th>Nhu cầu</th>
                            <th>Nguồn</th>
                            <th>Phụ trách</th>
                            <th>Ngày liên hệ</th>
                            <th>Ngày tạo</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <br />
        <a class="btn btn-primary collapsed title-history" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            Công việc (0)
        </a>
        <br />
        <a class="btn btn-primary collapsed title-history" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            Biên nhận (0)
        </a>
        <br />
        <a class="btn btn-primary collapsed title-history" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
            Bảo hành (0)
        </a>
        <br />
    </div>
</div>
@section js{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="~/vendors/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendors/datatables-buttons/dataTables.buttons.min.js"></script>
    <script src="~/vendors/datatables-buttons/buttons.print.min.js"></script>
    <script src="~/vendors/jszip/jszip.min.js"></script>
    <script src="~/vendors/datatables-buttons/buttons.html5.min.js"></script>
    <script src="~/vendors/flatpickr/flatpickr.min.js"></script>
    <script src="~/js/pages/crm/crminfo.js"></script>
}

