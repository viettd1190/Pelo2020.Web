@model Pelo.Web.Models.CustomerGroup.CustomerGroupModel

@{
    ViewBag.Title = "Cập nhật nhóm khách hàng";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Cập nhật nhóm khách hàng</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index")">
                    Danh sách nhóm khách hàng
                </a>
            </li>
            <li class="breadcrumb-item active">Cập nhật nhóm khách hàng</li>
        </ol>

        <form class="row" method="post">
            <div class="col-md-12">
                <h3 class="card-body__title">Thông tin nhóm khách hàng</h3>
                @Html.ValidationSummary()
                @Html.HiddenFor(c=>c.Id)
                <div class="form-group form-group--float">
                    @Html.TextBoxFor(c => c.Name,
                                     new {
                                                 @class = "form-control",
                                                 @autocomplete="none"
                                         })
                    <label>Tên nhóm khách hàng</label>
                    <i class="form-group__bar"></i>
                    @Html.ValidationMessageFor(c => c.Name)
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a class="btn btn-secondary" href="@Url.Action("Index")">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section js{
    <script src="~/js/pages/customer_group/edit.js"></script>
}

