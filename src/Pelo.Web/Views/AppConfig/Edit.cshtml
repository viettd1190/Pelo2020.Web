@model Pelo.Web.Models.AppConfig.AppConfigModel

@{
    ViewBag.Title = "Cập nhật thông tin cấu hình";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Cập nhật cấu hình</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index")">
                    Danh sách cấu hình
                </a>
            </li>
            <li class="breadcrumb-item active">Cập nhật cấu hình</li>
        </ol>

        <form class="row" method="post">
            <div class="col-md-12">
                <h3 class="card-body__title">Thông tin cấu hình</h3>
                @Html.ValidationSummary()
                @Html.HiddenFor(c=>c.Id)
                <div class="form-group form-group--float">
                    @Html.TextBoxFor(c => c.Name,
                                     new {
                                                 @class = "form-control",
                                                 @readonly="readonly",
                                                 @autocomplete="none"
                                         })
                    <label>Tên cấu hình</label>
                    <i class="form-group__bar"></i>
                    @Html.ValidationMessageFor(c => c.Name)
                </div>
                <div class="form-group form-group--float">
                    @Html.TextBoxFor(c => c.Value,
                                     new {
                                                 @class = "form-control"
                                         })
                    <label>Giá trị</label>
                    <i class="form-group__bar"></i>
                    @Html.ValidationMessageFor(c => c.Value)
                </div>
                <div class="form-group form-group--float">
                    @Html.TextAreaFor(c => c.Description,
                                     new {
                                                 @class = "form-control"
                                         })
                    <label>Ghi chú</label>
                    <i class="form-group__bar"></i>
                    @Html.ValidationMessageFor(c => c.Description)
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a class="btn btn-secondary" href="@Url.Action("Index")">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section js{
    <script src="~/js/pages/app_config/edit.js"></script>
}

